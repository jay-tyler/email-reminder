{% extends "base.jinja2" %}

{% block menu %}
    <li id="sign-up" class="home-menu-link pure-menu-item"><a href="{{ request.route_url('create_reminder') }}" class="pure-menu-link">New Reminder</a></li>
    <li id="sign-up" class="home-menu-link pure-menu-item"><a href="{{ request.route_url('logout') }}" class="pure-menu-link">Logout</a></li>
{% endblock %}

{% block body %}
<div class="content-wrapper">
    <div id='login-form-wrapper' class="content">
        <div class="pure-g"> 
            <div id="reminder-wrapper" class="l-box-lrg pure-u-1 pure-u-md-1">
                <h2 class="content-head">My Reminders</h2>
                <table id="reminder-list" class="pure-table pure-table-horizontal">
                    <thead>
                        <tr>
                            <th>Reminder</th>
                            <th>Text</th>
                            <th>To</th>
                            <th>Delivery Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reminder in reminders %}
                            <tr>
                                <td>{{ reminder.title }}</td>
                                <td>{{ reminder.text_payload }}</td>
                                <td>{{ reminder.alias.alias }}</td>
                                <td>{{ reminder.rrule.display_time }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
