{% extends "base.jinja2" %}
{% block body %}
<form action="{{ request.route_url('edit_reminder', title=reminder.title) }}" method="POST" class="add_entry">
    <div class="field">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="{{ reminder.title }}"/>
    </div>
    <div class="field">
        <label for="body">Body</label>
        <textarea rows="5" cols="80" id="payload" name="payload">{{ reminder.payload }}</textarea>
    </div>
    <div class="field">
        <label for="date">Date and Time</label>
        <input id="datetimepicker" type="text" name="delivery_time" value="{{ reminder.delivery_time }}"/>
    </div>
    <div class="control_row">
        <input id="ERButton" type="submit" value="Submit" name="submit"/>
    </div>
</form>
<script type="text/javascript">
$("#datetimepicker").datetimepicker();
</script>
{% endblock %}