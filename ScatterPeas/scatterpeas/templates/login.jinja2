{% extends "base.jinja2" %}
{% block menu %}
<li id="sign-up" class="home-menu-link pure-menu-item"><a href="{{ request.route_url('home') }}#sign-up" class="pure-menu-link">Sign Up</a></li>
{% endblock %}
{% block body %}

<div class="content-wrapper">
  <div id='login-form-wrapper' class="content">
    <h2 id="sign-up-title" class="content-head is-center">Login</h2>
    <div class="pure-g">
      {% if error -%}
        <p class="error"><strong>Error</strong>: {{ error }}</p>
      {%- endif %}
      <div id="form-wrapper" class="l-box-lrg pure-u-1 pure-u-md-2-5">
          <form id="sign-up" class="pure-form pure-form-stacked">
              <fieldset>
                  <label for="username">Username</label>
                  <input id="username" name="username" type="text" placeholder="Your Username">

                  <label for="password">Password</label>
                  <input id="password" name="password" type="password" placeholder="Your Password">

                  <button id="sign-up-button" type="submit" value="Login" name="Login" class="pure-button">Sign In</button>
              </fieldset>
          </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}