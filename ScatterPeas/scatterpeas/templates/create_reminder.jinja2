{% extends "base.jinja2" %}

{% block menu %}
    <li id="sign-up" class="home-menu-link pure-menu-item"><a href="{{ request.route_url('list') }}" class="pure-menu-link">My Reminders</a></li>
    <li id="sign-up" class="home-menu-link pure-menu-item"><a href="{{ request.route_url('logout') }}" class="pure-menu-link">Logout</a></li>
{% endblock %}

{% block body %}
<div class="content-wrapper">
    <div id='login-form-wrapper' class="content">
        <h2 id="sign-up-title" class="content-head is-center">New Reminder</h2>
        <div class="pure-g">
            <div id="new-reminder-form-wrapper" class="l-box-lrg pure-u-1 pure-u-md-2-5">
                <form action="{{ request.route_url('create_reminder') }}" method="POST" id="sign-up" class="pure-form pure-form-stacked">
                    <fieldset>
                        <label for="alias">Recipient</label>
                        <select name="alias_id" id="aliases">
                            {% for alias in aliases %}
                                <option value="{{ alias.id }}">{{ alias.alias }}</option>
                            {% endfor %}
                        </select>
                        <label for="title">Reminder Title</label>
                        <input name="title" id="title" type="text" placeholder="Reminder">

                        <label for="body">Body (will not be sent in text message)</label>
                        <textarea name="payload" id="payload" type="text" placeholder="Additional reminder text"></textarea>


                        <label for="date">Date and Time</label>
                        <input id="datetimepicker" type="text" name="delivery_time" placeholder="Date you want to be reminded">

                        <button id="CRButton" type="submit" class="pure-button" value="Submit" name="submit">Submit</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
$("#datetimepicker").datetimepicker();
</script>
{% endblock %}
