{% extends "base.jinja2" %}
{% block body %}
<form action="{{ request.route_url('create_reminder') }}" method="POST" class="add_entry">
    <div class="field">
        <p>Select a person to send to:</p>
        <select name="alias_id">
            {% for alias in aliases %}
                <option value="{{ alias.id }}">{{ alias.alias }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="field">
        <label for="title">Title</label>
        <input type="text" id="title" name="title"/>
    </div>
    <div class="field">
        <label for="body">Body</label>
        <textarea rows="5" cols="80" id="payload" name="payload"></textarea>
    </div>
    <div class="field">
        <label for="date">Date and Time</label>
        <input id="datetimepicker" type="text" name="delivery_time"/>
    </div>
    <div class="control_row">
        <input id="CRButton" type="submit" value="Submit" name="submit"/>
    </div>
</form>
<script type="text/javascript">
$("#datetimepicker").datetimepicker();
</script>
{% endblock %}